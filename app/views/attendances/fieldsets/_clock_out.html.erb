<%if f.object.allow_clock_out? %>
      <%= f.input :clock_out_at, as: :datetime,
                                html5: true,
                                input_html: {
                                  class: 'form-control datepicker',
                                  value: f.object.clock_out_at&.strftime('%Y-%m-%dT%H:%M') || DateTime.now.strftime('%Y-%m-%dT%H:%M')
                                  }
                                %>
<% end %>